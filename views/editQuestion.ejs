<%- include("./components/header") %>
  <%- include("./components/nav-login") %>

    <div class="container pt-5">
      <div class="container">
        <h3>Update Question</h3>
        <form action="/question/edit/<%= result._id %>" method="POST">
          <div class="form-group w-50 mb-3">
            <label for="exampleInputEmail1">Title</label>
            <input type="text" name="title" value="<%= result.title %>" class="form-control">

          </div>
          <div class="form-group w-50 mb-3">
            <label for="exampleInputPassword1">Question</label>
            <input type="text" name="message" value="<%= result.message %>" class="form-control">
          </div>

          <a href="/question/<%= result._id%>" class="btn btn-secondary">Cancel</a>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>


    <%- include("./components/footer") %>