<% if(cookies){ %>
  <div class="container ">
    <div class="container pt-5">
      <div class="bg-light p-5">
        <h1>New Question</h1>
        <div class="pt-5">
          <form class="row g-3" action="/add-question" method="POST">
            <div class="col-md-6">
              <label for="title" class="form-label"> Title</label>
              <input type="text" name="title" class="form-control" id="title">
            </div>

            <div class="col-12">

              <label for="description" class="form-label">Question</label>
              <textarea type="text" name="message" class="form-control" id="description"
                placeholder="Apartment, studio, or floor"> </textarea>
            </div>


            <div class="col-12">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <% } %>